<Window x:Class="SteakCreateTool.EditCountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Count" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Date:"/>
            <TextBox x:Name="DateTextBox" IsReadOnly="True" Margin="0,0,0,10"/>
            <TextBlock Text="Count:"/>
            <TextBox x:Name="CountTextBox" Margin="0,0,0,10"/>
            <Button Content="OK" Click="OnOkClick"/>
            <Button Content="Cancel" Click="OnCancelClick" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>