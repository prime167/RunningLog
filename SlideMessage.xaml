<UserControl x:Class="RunningLog.SlideMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="300">
    <Canvas Width="300">
        <Border x:Name="MessageBorder" Width="280" CornerRadius="5" Padding="10,5" Canvas.Top="-30" Canvas.Right="0">
            <TextBlock x:Name="MessageText" VerticalAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Border>
    </Canvas>
</UserControl>